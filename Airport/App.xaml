            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="buttonRedBorder" Property="Background" Value="#FFF7734C"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
