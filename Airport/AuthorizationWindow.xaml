<Window x:Class="Airport.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" 
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <ControlTemplate TargetType="TextBox" x:Key="textBoxBorderRadius">
            <Border CornerRadius="2" BorderBrush="#FFB8B8B8" BorderThickness="1"/>
        </ControlTemplate>
        <ControlTemplate TargetType="Button" x:Key="buttonEnter">
            <Border CornerRadius="2" BorderBrush="#FF7E7E7E" BorderThickness="1" 
                    Background="#FFC0FF95">
                <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" Content="Вход" />
            </Border>
        </ControlTemplate>
        <ControlTemplate TargetType="Button" x:Key="buttonCancel">
            <Border CornerRadius="2" BorderBrush="#FF7E7E7E" BorderThickness="1" 
                    Background="#FFFFAD95">
                <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" Content="Отмена" />
            </Border>
        </ControlTemplate>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Grid.Column="0" x:Name="mainImage" Grid.RowSpan="6" Margin="0,10,150,10">
            <Image.Source>
                <FormatConvertedBitmap Source="D:\Study\2 курс\2 семестр\Курсовая\Airport\Airport\Image\aut.png"/>
            </Image.Source>
        </Image>

        <TextBlock Grid.Row="0" Margin="105,0,0,0" >Введите логин:</TextBlock>
        <TextBox Name="loginBox" Grid.Row="1" Margin="105,0,0,0" HorizontalAlignment="Left" Width="145"></TextBox>
        <TextBlock Grid.Row="3" Margin="105,0,0,0">Введите пароль:</TextBlock>
        <TextBox Name="passwordBox"  Grid.Row="4" Margin="105,0,0,0"></TextBox>

        <WrapPanel Grid.Row="6" HorizontalAlignment="Right" Margin="0,0,0,0">
            <Button IsDefault="True" Template="{StaticResource buttonEnter}" Click="Accept_Click" MinWidth="60" Margin="0,0,5,0" Height="20" Width="70"/>
            <Button IsCancel="True" Template="{StaticResource buttonCancel}" MinWidth="60" Click="Button_Click" Height="20" Width="70"/>
        </WrapPanel>
    </Grid>
</Window>
