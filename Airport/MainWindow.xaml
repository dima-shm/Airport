<Window x:Class="Airport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Продажа авиабилетов" WindowStartupLocation="CenterScreen" 
        Height="600" Width="1000"
        Loaded="Window_Loaded" ResizeMode="NoResize">
    <Window.Resources>
        <ControlTemplate TargetType="{x:Type TextBox}" x:Key="textBox">
            <Grid>
                <Border x:Name="TextBoxBorder"
                        BorderBrush="#FF8C8C8C" 
                        BorderThickness="1" 
                        CornerRadius="3" 
                        Opacity="1">
                    <ScrollViewer x:Name="PART_ContentHost" 
                                  BorderThickness="0" IsTabStop="False" 
                                  Margin="0" Padding="{TemplateBinding Padding}">
                    </ScrollViewer>
                </Border>
            </Grid>
        </ControlTemplate>
        <ControlTemplate TargetType="Button" x:Key="buttonBlue">
            <Border x:Name="buttonBlueBorder" 
                    BorderBrush="#FF8C8C8C" 
                    BorderThickness="1"
                    CornerRadius="3"
                    Background="#FF9CC0FF"
                    Height="{TemplateBinding Height}"
                    Width="{TemplateBinding Width}">
                <ContentControl Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="buttonBlueBorder" Property="Background" Value="#FF5E98FD"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate TargetType="Button" x:Key="buttonCyan">
            <Border x:Name="buttonCyanBorder" 
                    BorderBrush="#FF8C8C8C" 
                    BorderThickness="1"
                    CornerRadius="3"
                    Background="#FF95FFE2"
                    Height="{TemplateBinding Height}"
                    Width="{TemplateBinding Width}">
                <ContentControl Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="buttonCyanBorder" Property="Background" Value="#FF48F7C7"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate TargetType="Button" x:Key="buttonGreen">
            <Border x:Name="buttonGreenBorder" 
                    BorderBrush="#FF8C8C8C" 
                    BorderThickness="1"
                    CornerRadius="3"
                    Background="#FFC0FF95"
                    Height="{TemplateBinding Height}"
                    Width="{TemplateBinding Width}">
                <ContentControl Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="buttonGreenBorder" Property="Background" Value="#FF86FF33"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate TargetType="Button" x:Key="buttonRed">
            <Border x:Name="buttonRedBorder" 
                    BorderBrush="#FF8C8C8C" 
                    BorderThickness="1"
                    CornerRadius="3"
                    Background="#FFFFAD95"
                    Height="{TemplateBinding Height}"
                    Width="{TemplateBinding Width}">
                <ContentControl Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="buttonRedBorder" Property="Background" Value="#FFF7734C"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate TargetType="DataGrid" x:Key="dateGrid">
            <Border x:Name="dateGridBorder" 
                    BorderBrush="#FF8C8C8C" 
                    BorderThickness="1"
                    CornerRadius="3"
                    Background="White">
                <ScrollViewer x:Name="PART_ContentHost" 
                              BorderThickness="0" IsTabStop="False" 
                              Margin="0" Padding="{TemplateBinding Padding}">
                </ScrollViewer>
            </Border>
        </ControlTemplate>
        <ControlTemplate TargetType="DatePicker" x:Key="datePicker">
            <Border x:Name="dateGridBorder" 
                    BorderBrush="#FF8C8C8C" 
                    BorderThickness="1"
                    CornerRadius="3"
                    Background="White">
                <ScrollViewer x:Name="PART_ContentHost" 
                              BorderThickness="0" IsTabStop="False" 
                              Margin="0" Padding="{TemplateBinding Padding}">
                </ScrollViewer>
            </Border>
        </ControlTemplate>
        <ControlTemplate TargetType="TabItem" x:Key="tabItem">
            <Border x:Name="tabItemBorder" 
                    BorderBrush="#FF8C8C8C" 
                    BorderThickness="1"
                    CornerRadius="3"
                    Background="White">
                <ScrollViewer x:Name="PART_ContentHost" 
                              BorderThickness="0" IsTabStop="False" 
                              Margin="0" Padding="{TemplateBinding Padding}"
                              Height="{TemplateBinding Height}"
                              Width="{TemplateBinding Width}">
                </ScrollViewer>
            </Border>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <TabControl HorizontalAlignment="Left" VerticalAlignment="Top" Width="994" Height="571">
            <TabItem Header="Авиарейсы">
                <Grid Height="544">
                    <GroupBox Header="Добавить рейс" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="261" Height="128">
                        <Grid>
                            <Label Content="Номер авиарейса" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
                            <TextBox x:Name="ID_авиарейса" Template="{StaticResource textBox}" HorizontalAlignment="Left" Height="20" Margin="123,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                            <Label Content="Авиакомпания" HorizontalAlignment="Left" Margin="0,41,0,0" VerticalAlignment="Top" Width="108"/>
                            <TextBox HorizontalAlignment="Left" Template="{StaticResource textBox}" Height="20" Margin="123,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                            <Label Content="Количество мест" HorizontalAlignment="Left" Margin="0,72,0,0" VerticalAlignment="Top"/>
                            <TextBox HorizontalAlignment="Left" Template="{StaticResource textBox}" Height="20" Margin="123,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Информация об отправлении и прибытии" VerticalAlignment="Top" Margin="276,10,173,0" Height="128">
                        <Grid>
                            <Label Content="Аэропорт отправления" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
                            <TextBox Template="{StaticResource textBox}" HorizontalAlignment="Left" Height="20" Margin="143,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                            <Label Content="Аэропорт прибытия" HorizontalAlignment="Left" Margin="268,10,0,0" VerticalAlignment="Top"/>
                            <TextBox Template="{StaticResource textBox}" HorizontalAlignment="Left" Height="20" Margin="394,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                            <Label Content="Дата отправления" HorizontalAlignment="Left" Margin="0,41,0,0" VerticalAlignment="Top" Width="138"/>
                            <DatePicker HorizontalAlignment="Left" Margin="143,48,0,0" VerticalAlignment="Top" Width="120" Height="20" Padding="2,-5,2,2" UseLayoutRounding="False" FontStyle="Italic"/>
                            <Label Content="Дата прибытия" HorizontalAlignment="Left" Margin="268,41,0,0" VerticalAlignment="Top" Width="121"/>
                            <DatePicker HorizontalAlignment="Left" Margin="394,48,0,0" VerticalAlignment="Top" Width="120" Height="20" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="2,-5,2,2" ScrollViewer.CanContentScroll="True" FontStyle="Italic"/>
                            <Label Content="Время отправления" HorizontalAlignment="Left" Margin="0,73,0,0" VerticalAlignment="Top" Width="138"/>
                            <TextBox Template="{StaticResource textBox}" HorizontalAlignment="Left" Height="20" Margin="143,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                            <Label Content="Время прибытия" HorizontalAlignment="Left" Margin="268,73,0,0" VerticalAlignment="Top" Width="121"/>
                            <TextBox Template="{StaticResource textBox}" HorizontalAlignment="Left" Height="20" Margin="394,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                        </Grid>
                    </GroupBox>
                    <Button Content="Добавить" Template="{StaticResource buttonBlue}" Click="Button_Click_1" Margin="820,78,20,439"/>
                    <Button Content="Обновить" Template="{StaticResource buttonCyan}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Margin="820,110,0,0" Height="27" Click="Button_Click"/>

                    <DataGrid x:Name="flightGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Height="259" Width="958" HeadersVisibility="Column" MinColumnWidth="130.0" MaxColumnWidth="141.0" Margin="10,143,0,0" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible"/>

                    <GroupBox Header="Поиск" HorizontalAlignment="Left" Margin="10,407,0,0" VerticalAlignment="Top" Height="128" Width="402">
                        <Grid>
                            <Label Content="Поиск по номеру авиарейса" HorizontalAlignment="Left" Margin="0,14,0,0" VerticalAlignment="Top" Width="180"/>
                            <TextBox Template="{StaticResource textBox}" HorizontalAlignment="Left" Height="20" Margin="185,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                            <Label Content="Поиск по аэропорту прибытия" HorizontalAlignment="Left" Margin="0,46,0,0" VerticalAlignment="Top"/>
                            <TextBox Template="{StaticResource textBox}" HorizontalAlignment="Left" Height="20" Margin="185,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                            <Label Content="Поиск по авиакомпании" HorizontalAlignment="Left" Margin="0,78,0,0" VerticalAlignment="Top" Width="180"/>
                            <TextBox Template="{StaticResource textBox}" HorizontalAlignment="Left" Height="20" Margin="185,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                            <Button Content="Найти" Template="{StaticResource buttonGreen}" HorizontalAlignment="Left" Margin="310,17,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
                            <Button Content="Найти" Template="{StaticResource buttonGreen}" HorizontalAlignment="Left" Margin="310,49,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
                            <Button Content="Найти" Template="{StaticResource buttonGreen}" HorizontalAlignment="Left" Margin="310,81,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
                        </Grid>
                    </GroupBox>

                    <Label Content="Удалить рейс" HorizontalAlignment="Left" Margin="681,413,0,0" VerticalAlignment="Top"/>
                    <TextBox Template="{StaticResource textBox}" HorizontalAlignment="Left" Height="20" Margin="769,416,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button Content="Удалить" Template="{StaticResource buttonRed}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="894,416,0,0" Height="20" RenderTransformOrigin="1.473,-1.692"/>
                </Grid>
            </TabItem>
            <TabItem Header="Пассажиры"/>
            <TabItem Header="Билеты"/>
        </TabControl>



    </Grid>
</Window>
